{

  /* Vertical guidelines for line wrapping. */
  "editor.rulers": [
    100,
  ],

  /* Wrap long code lines at the viewport or 100 characters, whichever is
  narrowest. Same for documentation. */
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 100,
  "[asciidoc]": {
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100,
  },
  "[markdown]": {
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100,
  },

  /* Enforce 2 spaces for indentation. */
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,

  /* Show control and empty space characters. */
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",

  /* Enable all auto-formatting mechanisms. */
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,

  /* Enable auto-fixes. */
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
  },

  /* For JS/TS code, formatting and validation MUST be configured per-repo,
  AND per-workspace where multiple JS/TS repos are part of a larger project. */
  "javascript.format.enable": false,
  "javascript.validate.enable": false,
  "js/ts.implicitProjectConfig.checkJs": false,

  /* Don't allow commits to protected branches. */
  "git.branchProtectionPrompt": "alwaysPrompt",
  "git.branchProtection": [
    // "stable",
    // "release/*",
  ],

}
